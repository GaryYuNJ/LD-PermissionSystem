<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ldps.dao.NodeRelModelMapper" >
  <cache 
  	eviction="LRU" 
  	flushInterval="36000000" 
  	size="1024" 
  	readOnly="true" >
  </cache>
  
  <resultMap id="BaseResultMap" type="com.ldps.model.NodeRelModel" >
    <result column="ID_PARENT" property="idParent" jdbcType="INTEGER" />
    <result column="ID_CHILD" property="idChild" jdbcType="INTEGER" />
    <result column="N_INT1" property="nInt1" jdbcType="INTEGER" />
    <result column="VC1" property="vc1" jdbcType="VARCHAR" />
    <result column="CHR1" property="chr1" jdbcType="CHAR" />
  </resultMap>
  
  <insert id="insert" parameterType="com.ldps.model.NodeRelModel" >
    insert into NODE_REL (ID_PARENT, ID_CHILD, N_INT1, 
      VC1, CHR1)
    values (#{idParent,jdbcType=INTEGER}, #{idChild,jdbcType=INTEGER}, #{nInt1,jdbcType=INTEGER}, 
      #{vc1,jdbcType=VARCHAR}, #{chr1,jdbcType=CHAR})
  </insert>
  
  <insert id="insertSelective" parameterType="com.ldps.model.NodeRelModel" >
    insert into NODE_REL
    <trim prefix="(" suffix=")" suffixOverrides="," >
      <if test="idParent != null" >
        ID_PARENT,
      </if>
      <if test="idChild != null" >
        ID_CHILD,
      </if>
      <if test="nInt1 != null" >
        N_INT1,
      </if>
      <if test="vc1 != null" >
        VC1,
      </if>
      <if test="chr1 != null" >
        CHR1,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides="," >
      <if test="idParent != null" >
        #{idParent,jdbcType=INTEGER},
      </if>
      <if test="idChild != null" >
        #{idChild,jdbcType=INTEGER},
      </if>
      <if test="nInt1 != null" >
        #{nInt1,jdbcType=INTEGER},
      </if>
      <if test="vc1 != null" >
        #{vc1,jdbcType=VARCHAR},
      </if>
      <if test="chr1 != null" >
        #{chr1,jdbcType=CHAR},
      </if>
    </trim>
  </insert>
  
  <sql id="Base_Column_List" >
    ID_PARENT, ID_CHILD, N_INT1, VC1, CHR1
  </sql>
  
  <sql id="Base_Column_List_withLabel" >
    N.ID_PARENT, N.ID_CHILD, N.N_INT1, N.VC1, N.CHR1 
  </sql>
  
  
  <select id="selectParentNodeIdbyChildNodeId" resultMap="BaseResultMap" parameterType="java.lang.Integer" >
    select 
    <include refid="Base_Column_List" />
    from NODE_REL 
    where ID_CHILD = #{idChild,jdbcType=INTEGER}
  </select>
    
  <select id="selectParentNodeIdbyResourceId" resultMap="BaseResultMap" parameterType="java.lang.Integer" >
    select 
    <include refid="Base_Column_List_withLabel" />
    from NODE_REL N, RESOURCE R
    where R.NODE_ID = N.ID_CHILD 
    AND R.ID = #{resourceId,jdbcType=INTEGER}
  </select>
  
</mapper>